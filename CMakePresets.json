{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 1
    },
    "configurePresets": [
        {
            "name": "library",
            "displayName": "library",
            "description": "Use for building and installing library",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "/opt/logger/",
                "CMAKE_C_COMPILER": "/usr/bin/clang",
                "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "environment": {
                "CFLAGS": "-g3 -D",
                "CXXFLAGS": "-g3 -D"
            }
        }
    ],
    "testPresets": [
        {
            "name": "unit_tests_host",
            "configurePreset": "host_clang",
            "output": {
                "outputOnFailure": true,
                "verbosity": "verbose"
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ]
}